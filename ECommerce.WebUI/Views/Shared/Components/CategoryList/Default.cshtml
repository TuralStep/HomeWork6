@model CategoryListViewModel
<section class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        @if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
        <section class="@css">
            <a href="/product/index?category=@item.CategoryId" style="cursor:pointer;">
                @item.CategoryName
            </a>
            @if (Model.IsAdmin)
            {
                <a class="btn btn-xs btn-danger"
                   asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId">
                    X
                </a>
            }
        </section>
    }
    @if (Model.IsAdmin)
    {
        <section class="list-group-item">
            <form asp-controller="Category" asp-action="Add" method="post">
                <input type="hidden" name="name" value="@Model.AddingCategory" />
                <input type="text" placeholder="Category Name" asp-for="@Model.AddingCategory" />
                <button type="submit" class="btn btn-xs btn-success">Add</button>
            </form>
        </section>
    }
</section>